<h1>Tuscan Stone Pizza</h1>


<table>
  <thead>
    <tr>
      <th>All Stores Sales</th>
      <th>All Stores Labor</th>
      <th>All Stores COGS</th>
      <th>Total Gross Margin</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>$<%= @todays_sales %></td>
      <td>$<%= @todays_labor %></td>
      <td>$<%= @todays_cogs %></td>
      <td>$<%= @todays_grossmargin %></td>
    </tr>
  </tbody>
</table>

