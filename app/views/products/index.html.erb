<h1> Products:</h1>

<%= column_chart Product.group(:name).sum(:cost) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Materials</th>
      <th>Cost</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product_path(product) %></td>
      <td><%= product.materials %></td>
      <td>$<%= product.cost %></td>
      <td>$<%= product.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "Add a product", new_product_path %></p>
<p><%= link_to "Home", root_path %></p>
